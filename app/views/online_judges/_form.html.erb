<%= simple_form_for(@online_judge) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :site, :collection => ["Caribbean Online Judge (COJ)", "UVa Online Judge", "Sphere Online Judge", "ACM-ICPC Live Archive"], :id => "judge-select" %>
    <%= f.input :account_name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
